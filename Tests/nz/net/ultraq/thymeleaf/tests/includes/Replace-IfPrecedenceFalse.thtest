
# Checks the interaction of the layout:replace processor with the th:if
# processor.  Note that the replacement removes the th:if, meaning the fragment
# is added regardless.

%TEMPLATE_MODE HTML5


%INPUT
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
	xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">
<body>
	<div th:if="${false}" layout:replace="Page :: text"></div>
</body>
</html>


%INPUT[Page]
<!DOCTYPE html>
<html>
<body>
	<div layout:fragment="text">
		<p>Included text</p>
	</div>
</body>
</html>


%OUTPUT
<!DOCTYPE html>
<html>
<body>
	<div>
		<p>Included text</p>
	</div>
</body>
</html>
